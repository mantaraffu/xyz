# --- Telegram Bot ---
# Crea un bot con @BotFather su Telegram e incolla qui il token
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather
# Modalita': "polling" (consigliato, nessun setup extra) oppure "webhook"
TELEGRAM_MODE=polling
# Solo per modalita' webhook: URL pubblico del server (es. https://tuodominio.com)
TELEGRAM_WEBHOOK_URL=

# --- Ollama (LLM locale) ---
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=gemma3:12b

# --- ChromaDB ---
CHROMA_PERSIST_DIR=./chroma_data
CHROMA_COLLECTION_NAME=casa_quartiere_kb

# --- Embedding Model ---
EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2

# --- RAG Settings ---
RAG_TOP_K=5
RAG_SIMILARITY_THRESHOLD=0.3

# --- Server ---
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
DEBUG=false

# --- Dashboard ---
DASHBOARD_USERNAME=admin
DASHBOARD_PASSWORD=changeme_immediately

# --- Logging ---
LOG_LEVEL=INFO
LOG_FILE=./logs/bot.log
